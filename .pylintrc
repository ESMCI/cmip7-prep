[MASTER]
ignore-paths=build,dist,.venv,.eggs,scripts
extension-pkg-allow-list=cmor
init-hook='import sys, os; sys.path.append(os.getcwd())'

[MESSAGES CONTROL]
disable=
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements

[FORMAT]
max-line-length=100

[TYPECHECK]
ignored-modules=xarray,xesmf,cmor,numpy,geocat.comp,yaml,cftime,pytest,dask
ignored-classes=cmor
